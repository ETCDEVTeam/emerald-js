{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./lib",
    "declaration": true,
    "rootDirs": ["src"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "../../node_modules",
    "node_modules",
    "**/*.spec.ts"
  ]
}
